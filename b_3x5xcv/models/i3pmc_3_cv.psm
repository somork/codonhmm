:-['~/settings/default.pl'].

data('../data/cv_train_1.dat').

% parameters:
values(transition(begin),[state(1),state(2),state(3)]).

values(transition(state(1)),[state(1),end]).
values(transition(state(2)),[state(2),end]).
values(transition(state(3)),[state(3),end]).

values(emission(_),[a,c,g,t]).
values(emission(_,_),[a,c,g,t]).

% initiation:
model(Obs):-
        msw(transition(begin),NS),
        recursion(NS,Obs).

recursion(state(S),[Xi|[Yi|[Zi|R]]]):-
        msw(emission(S),Xi),
        msw(emission(Xi),Yi),
        msw(emission(Xi,Yi),Zi),
        msw(transition(state(S)),NS),
        recursion(NS,R).

% termination:
recursion(end,[]).



